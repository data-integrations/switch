{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name" : "Routing Switch",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "input-field-selector",
          "label": "Routing field",
          "name": "routingField",
          "widget-attributes": {

          }
        },
        {
          "widget-type": "function-dropdown-with-alias",
          "label": "Port Specification",
          "name": "portSpecification",
          "widget-attributes": {
            "placeholders": {
              "field": "Value",
              "alias": "Port name"
            },
            "dropdownOptions": [
              {
                "label": "Equals",
                "value": "equals"
              },
              {
                "label": "Not Equals",
                "value": "not_equals"
              },
              {
                "label": "Contains",
                "value": "contains"
              },
              {
                "label": "Not Contains",
                "value": "not_contains"
              },
              {
                "label": "In",
                "value": "in"
              },
              {
                "label": "Not In",
                "value": "not_in"
              },
              {
                "label": "Matches",
                "value": "matches"
              },
              {
                "label": "Not Matches",
                "value": "not_matches"
              },
              {
                "label": "Starts With",
                "value": "starts_with"
              },
              {
                "label": "Not Starts With",
                "value": "not_starts_with"
              },
              {
                "label": "Ends With",
                "value": "ends_with"
              },
              {
                "label": "Not Ends With",
                "value": "not_ends_with"
              },
              {
                "label": "Number Equals",
                "value": "number_equals"
              },
              {
                "label": "Number Not Equals",
                "value": "number_not_equals"
              },
              {
                "label": "Number Greater Than",
                "value": "number_greater_than"
              },
              {
                "label": "Number Greater Than or Equals",
                "value": "number_greater_than_or_equals"
              },
              {
                "label": "Number Lesser Than",
                "value": "number_lesser_than"
              },
              {
                "label": "Number Lesser Than or Equals",
                "value": "number_lesser_than_or_equals"
              }
            ]
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": ["portSpecification"],
            "missing-required-fields-message": "'Port Specification' is required to fetch schema."
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "select",
          "label": "Default handling",
          "name": "defaultHandling",
          "widget-attributes": {
            "values": [
              "Skip",
              "Send to error port",
              "Send to default port"
            ],
            "default": "Send to error port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Default Port",
          "name": "defaultPort"
        },
        {
          "widget-type": "select",
          "label": "Null handling",
          "name": "nullHandling",
          "widget-attributes": {
            "values": [
              "Skip",
              "Send to error port",
              "Send to null port"
            ],
            "default": "Send to error port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Null Port",
          "name": "nullPort"
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": []
}
