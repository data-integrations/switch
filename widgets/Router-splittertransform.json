{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Router",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Allow flexible schemas",
          "name": "allowFlexibleSchema",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "input-field-selector",
          "label": "Routing field",
          "name": "routingField",
          "widget-attributes": {
          }
        },
        {
          "widget-type": "textbox",
          "label": "Routing field",
          "name": "flexRoutingField"
        },
        {
          "widget-type": "function-dropdown-with-alias",
          "label": "Port Specification",
          "name": "portSpecification",
          "widget-attributes": {
            "placeholders": {
              "field": "Value",
              "alias": "Port name"
            },
            "dropdownOptions": [
              {
                "label": "Equals",
                "value": "equals"
              },
              {
                "label": "Not Equals",
                "value": "not_equals"
              },
              {
                "label": "Contains",
                "value": "contains"
              },
              {
                "label": "Not Contains",
                "value": "not_contains"
              },
              {
                "label": "In",
                "value": "in"
              },
              {
                "label": "Not In",
                "value": "not_in"
              },
              {
                "label": "Matches",
                "value": "matches"
              },
              {
                "label": "Not Matches",
                "value": "not_matches"
              },
              {
                "label": "Starts With",
                "value": "starts_with"
              },
              {
                "label": "Not Starts With",
                "value": "not_starts_with"
              },
              {
                "label": "Ends With",
                "value": "ends_with"
              },
              {
                "label": "Not Ends With",
                "value": "not_ends_with"
              },
              {
                "label": "Number Equals",
                "value": "number_equals"
              },
              {
                "label": "Number Not Equals",
                "value": "number_not_equals"
              },
              {
                "label": "Number Greater Than",
                "value": "number_greater_than"
              },
              {
                "label": "Number Greater Than or Equals",
                "value": "number_greater_than_or_equals"
              },
              {
                "label": "Number Lesser Than",
                "value": "number_lesser_than"
              },
              {
                "label": "Number Lesser Than or Equals",
                "value": "number_lesser_than_or_equals"
              },
              {
                "label": "Number Between",
                "value": "number_between"
              },
              {
                "label": "Number Not Between",
                "value": "number_not_between"
              },
              {
                "label": "Date Equals",
                "value": "date_equals"
              },
              {
                "label": "Date Not Equals",
                "value": "date_not_equals"
              },
              {
                "label": "Date After",
                "value": "date_after"
              },
              {
                "label": "Date After or On",
                "value": "date_after_or_on"
              },
              {
                "label": "Date Before",
                "value": "date_before"
              },
              {
                "label": "Date Before or On",
                "value": "date_before_or_on"
              },
              {
                "label": "Date Between",
                "value": "date_between"
              },
              {
                "label": "Date Not Between",
                "value": "date_not_between"
              }
            ]
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": [
              "portSpecification"
            ],
            "missing-required-fields-message": "'Port Specification' is required to fetch schema."
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "select",
          "label": "Default handling",
          "name": "defaultHandling",
          "widget-attributes": {
            "values": [
              "Skip",
              "Send to error port",
              "Send to default port"
            ],
            "default": "Send to error port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Default Port",
          "name": "defaultPort"
        },
        {
          "widget-type": "select",
          "label": "Null handling",
          "name": "nullHandling",
          "widget-attributes": {
            "values": [
              "Skip",
              "Send to error port",
              "Send to null port"
            ],
            "default": "Send to error port"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Null Port",
          "name": "nullPort"
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [],
  "filters": [
    {
      "name": "showRoutingField",
      "condition": {
        "expression": "allowFlexibleSchema == 'false'"
      },
      "show": [
        {
          "type": "property",
          "name": "routingField"
        }
      ]
    },
    {
      "name": "showFlexRoutingField",
      "condition": {
        "expression": "allowFlexibleSchema == 'true'"
      },
      "show": [
        {
          "type": "property",
          "name": "flexRoutingField"
        }
      ]
    }
  ]
}
